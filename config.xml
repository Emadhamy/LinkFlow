<?xml version='1.0' encoding='utf-8'?>
<widget id="com.linkflow.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LinkFlow</name>
    <description>لينك فلو - مدير اتصالات واتساب الذكي</description>
    <author email="contact@linkflow.app" href="https://linkflow.app">LinkFlow Team</author>
    
    <content src="index.html" />
    
    <!-- المنصات المدعومة -->
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- الأيقونات -->
        <icon src="icon.svg" />
        <!-- الشاشة الأولى -->
        <splash src="icon.svg" />
    </platform>
    
    <!-- الإذن والحماية -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- WhatsApp Intent -->
    <allow-intent href="whatsapp://*" />
    
    <!-- الإعدادات العامة -->
    <preference name="loglevel" value="WARN" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="ShowSplashScreenOnLaunch" value="true" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="1000" />
    
    <!-- Android محدد -->
    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="android-compileSdkVersion" value="35" />
    </platform>
    
    <!-- الإضافات المطلوبة -->
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    
</widget>
